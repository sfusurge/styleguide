{
	"compilerOptions": {
		// Target ES2017 for performance, with CommonJS for NodeJS programs.
		"target": "ES2017",
		"module": "CommonJS",
		"lib": ["esnext"],
		"types": ["jest"],

		// We write code exclusively in TypeScript.
		"allowJs": false,

		// Performance options.
		"skipLibCheck": true,

		// Interop options.
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,

		// Strictness options.
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"isolatedModules": true,

		// Features.
		"experimentalDecorators": true
	},
	"exclude": [
		// Tests.
		"**/*.test.ts",
		"**/*.test.tsx",
	]
}
