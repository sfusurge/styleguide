{
	"extends": "@sfusurge/typescript-react-config",
	"compilerOptions": {
		// Target ES6 for compatibility, with ESNext modules so Babel can use it.
		"target": "ES6",
		"module": "ESNext",

		// Add types.
		"types": [
			"@sfusurge/craco-config",

			// from: @sfusurge/typescript-react-config
			"jest", "@testing-library/react", "@testing-library/jest-dom"
		],

		// No emit.
		"sourceMap": false,
		"declaration": false,
		"noEmit": true,

		// Emit to a build directory.
		"declarationDir": "build",
		"outDir": "build",
	}
}
